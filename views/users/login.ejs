<% layout("/layouts/boilerplate") %>
<body>

    <div class="row mt-3">
        <h1 class="col-6 offset-3 createNew-heading" style="margin-bottom: 40px;">Login</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation">
                <div class="mb-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>
                <div class="valid-feedback">Looks good!</div>

                <div class="mb-3">
                    <lable for="password" class="form-label">Password</lable>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button class="btn btn-success">Login</button>
            </form>
            <br>
            <hr>

            <div class="mt-3">
                If you don't have an account, please
                <a href="/signup"><h5 style="float: right;margin-right: 200px;">Signup</h5></a>
            </div>
        </div>
    </div>
</body>