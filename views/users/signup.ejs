<% layout("/layouts/boilerplate") %>
<body>
    

    <div class="row mt-3">
        <h1 class="col-6 offset-3 createNew-heading" style="margin-bottom: 40px;">Signup</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation">
                <div class="mb-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>
                <div class="valid-feedback">Looks good!</div>
                <div class="mb-3">
                    <lable for="email" class="form-label">Email</lable>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <lable for="password" class="form-label">Password</lable>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
            <br>
            <hr>

            <div class="mt-3">
                If already having an account, please
                <a href="/login"><h5 style="float: right; margin-right: 200px;">Login</h5></a>
            </div>
        </div>
    </div>  

</body>